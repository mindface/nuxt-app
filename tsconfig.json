{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "preserve",
    "typeRoots": [
      "node_modules/@types",
      "./src/types"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": [
    "types/nitro.d.ts",
    // "**/*.ts", "**/*.d.ts", "**/*.vue"
  ],
  "exclude": ["node_modules"]
}
